<!-- Add -->

<div class="modal fade" id="addnew">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title"><b>Thêm Đơn Hàng </b></h4>
            </div>
            <div class="modal-body">                        
                    <form action="/admin/sales/add-sale" class="form-horizontal" id="add-sale" method="POST">
                            <div class="form-group">
                                <label class="col-sm-3 col-lg-2 control-label">Tên Khách hàng</label>
                                <div class="col-sm-9 col-lg-10 controls">
                                    <input type="text" class="form-control catname"   class="form-control" name="name_kh"/>                                                                          
                                </div>
                            </div>   
                            <div class="form-group">
                                <label class="col-sm-3 col-lg-2 control-label">Số điện thoại</label>
                                <div class="col-sm-9 col-lg-10 controls">
                                    <input type='number' class="form-control" name="phone" />                                        
                                </div>
                            </div> 
                            <div class="form-group">
                                <label class="col-sm-3 col-lg-2 control-label">Tên Nhân viên</label>
                                <div class="col-sm-9 col-lg-10 controls">
                                    <select class="form-control" name="name_nv">                               
                                        <% emp.forEach(function(emp){ %>
                                            <option value="<%= emp.name %>"><%= emp.name %></option>
                                            <% }); %>
                                    </select>                                                                         
                                </div>
                            </div>
                            <div class="form-group prod">
                                <label class="col-sm-3 col-lg-2 control-label">Sản phẩm</label>
                                <div class="col-sm-9 col-lg-4 controls">
                                    <select class="form-control" name="product">                               
                                        <% products.forEach(function(pro){ %>
                                            <option value="<%= pro.slug %>" data-price="<%= pro.price%>"><%= pro.title %></option>
                                            <% }); %>
                                    </select>            
                                </div>
                                <div class="col-sm-9 col-lg-2 controls">
                                    <input type="text" value="1" class="form-control catname" name="count">                                                                          
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="col-sm-3 col-lg-2 control-label">Thành tiền</label>
                                <div class="col-sm-9 col-lg-10 controls">
                                    <input id="total" type="text" value=0 class="form-control" name="total"/>                                        
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2">
                                        <button onclick="cloneQuestion()" type="button" class="btn btn-success btn-flat btn-left" ><i class="fa fa-check-square-o" ></i> Thêm</button>   
                                        <button onclick="tong()" type="button" class="btn btn-success btn-flat " ><i class="fa fa-check-square-o" ></i> Thành tiền</button>     
                                    <button type="submit" class="btn btn-success btn-flat btn-right" ><i class="fa fa-check-square-o"></i> Cập Nhật</button>                                     
                                </div>
                            </div>    
                        </form>                  
            </div>
            
        </div>
    </div>
</div>

<!-- Edit -->
